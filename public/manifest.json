{
    "manifest_version": 3,
    "key": "CHROMEEXTENSIONKEYBILIBILIPLUS01",
    "name": "Bilibili 字幕提取器",
    "version": "1.0.1",
    "description": "增强B站功能如提取字幕总结等",
    "permissions": [
        "cookies",
        "activeTab",
        "downloads",
        "scripting",
        "storage",
        "sidePanel"
    ],
    "host_permissions": [
        "https://www.bilibili.com/*",
        "https://api.bilibili.com/*",
        "https://aisubtitle.hdslb.com/*"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.bilibili.com/video/*",
                "*://www.bilibili.com/list/watchlater?*"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "src/entry/popup/index.html",
        "default_icon": {
            "16": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "http://*.bilibili.com/*",
                "https://*.bilibili.com/*"
            ],
            "resources": [
                "*.js",
                "*.css",
                "*.png",
                "*.webp",
                "*.json",
                "*.html",
                "*.wasm"
            ]
        }
    ],
    "side_panel": {
        "default_path": "src/entry/sidepanel/index.html"
    }
}